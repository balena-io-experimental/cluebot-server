{
  "name": "cluebot",
  "version": "0.0.1",
  "description": "A bot host for a collaborative puzzle game about remote work",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node build/server/index.js",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json && NODE_ENV=production webpack",
    "postbuild": "cp ./.env.prod build/",
    "postinstall": "ts-node scripts/postinstall.ts",
    "reseed": "rimraf ./database.sqlite3 && knex migrate:latest && knex seed:run",
    "dev": "NODE_ENV=development ts-node scripts/dev.ts",
    "lint": "balena-lint -e ts -e js --fix server/ client/ tests/ scripts/",
    "clean": "rimraf build",
    "test": "NODE_ENV=test jest"
  },
  "engines": {
    "node": "^14.18.1",
    "npm": "^6.14.15"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/balena-io-playground/cluebot-server.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/balena-io-playground/cluebot-server/issues"
  },
  "homepage": "https://github.com/balena-io-playground/cluebot-server#readme",
  "devDependencies": {
    "@balena/lint": "^6.1.1",
    "@types/concurrently": "^6.3.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/moment": "^2.13.0",
    "@types/mustache": "^4.1.2",
    "@types/node": "^16.10.3",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17.0.9",
    "@types/sqlite3": "^3.1.7",
    "@types/styled-components": "^5.1.15",
    "concurrently": "^6.3.0",
    "copy-webpack-plugin": "^9.0.1",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "lint-staged": "^11.2.3",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.3",
    "webpack": "^5.58.2",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.3.1"
  },
  "dependencies": {
    "csvtojson": "^2.0.10",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "googleapis": "^88.2.0",
    "knex": "^0.95.11",
    "moment": "^2.29.1",
    "mustache": "^4.2.0",
    "node-gyp": "^8.2.0",
    "pg": "^8.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sqlite3": "^5.0.2",
    "styled-components": "^5.3.1",
    "typed-error": "^3.2.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": "balena-lint -e ts -e js --fix server/ client/ tests/ scripts/"
  }
}
