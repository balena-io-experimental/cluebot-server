{
    "compilerOptions": {
        "outDir": "build",
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2020",
        "lib": ["es2020", "dom"],
        "noUnusedLocals": true,
		"noUnusedParameters": true,
        "types": ["node", "jest", "react"],
        "preserveConstEnums": true,
        "removeComments": true,
        "allowJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "jsx": "react"
    },
    "include": ["server/**/*", "tests/**/*", "client/**/*"],
    "exclude": ["/node_modules/"]
}