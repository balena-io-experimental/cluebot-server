{
    "compilerOptions": {
        "outDir": "build",
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2020",
        "lib": ["es2020"],
        "noUnusedLocals": true,
		"noUnusedParameters": true,
        "types": ["node"],
        "preserveConstEnums": true,
        "removeComments": true,
        "allowJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
    },
    "include": ["src/**/*"],
    "exclude": ["/node_modules/"]
}